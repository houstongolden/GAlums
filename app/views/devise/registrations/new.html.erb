<div class="sign_in_form">

	<h2>Sign up</h2>

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	  <div>
	  <%= f.email_field :email, :class => "sign_up_text", :placeholder => "Email" %></div>

	  <div>
	  <%= f.password_field :password, :class => "sign_up_text", :placeholder => "Password" %></div>

	  <div>
	  <%= f.password_field :password_confirmation, :class => "sign_up_text", :placeholder => "Password Confirmation" %></div>

	  <div><%= f.submit "Sign up" %></div>
	<% end %>

	<%= render "devise/shared/links" %>

</div>